<?xml version="1.0" encoding="UTF-8"?>
<!-- Contains website-integration specifics -->
<odoo>

    <record id="menu_presentation" model="website.menu">
        <field name="name">Presentation</field>
        <field name="url">/present</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">25</field>
    </record>

    <!-- Filter for Dynamic Filter -->
    <record id="dynamic_snippet_latest_presentations_filter" model="ir.filters">
        <field name="name">Latest Updated Presentations</field>
        <field name="model_id">presentation</field>
        <field name="user_ids" eval="False" />
        <field name="domain">[]</field>
        <field name="sort">["write_date desc, id desc"]</field>
        <field name="action_id" ref="website.action_website"/>
    </record>
    <!-- Dynamic Filter -->
    <record id="dynamic_filter_latest_presentations" model="website.snippet.filter">
        <field name="name">Latest Updated Presentations</field>
        <field name="filter_id" ref="present.dynamic_snippet_latest_presentations_filter"/>
        <field name="field_names">name,description</field>
        <field name="limit" eval="16"/>
    </record>

</odoo>
